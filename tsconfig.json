{
	"compilerOptions": {
		"target": "es2018",
		"module": "commonjs",
		"lib": ["dom", "es6", "es2017", "es2018", "esnext.asynciterable"],
		"sourceMap": false,
		"moduleResolution": "node",
		"declaration": false,
		"composite": false,
		"removeComments": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"skipLibCheck": true,
		"outDir": "./dist",
		"rootDir": "src",
		"baseUrl": ".",
		"paths": {
			"#root/*": ["./src/*"]
		}
	},
	"exclude": ["node_modules"]
}
